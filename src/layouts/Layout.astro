---
import { type ThemeType } from '../styles/themes';
import ThemeDebug from '../components/ThemeDebug.astro';
import '../styles/global.css';

interface Props {
  title: string;
  theme?: ThemeType;
}

const { title, theme = 'light' } = Astro.props;
---

<!DOCTYPE html>
<html lang="en" data-theme={theme}>
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <meta name="generator" content={Astro.generator} />
    <title>{title}</title>
    <link href="https://fonts.googleapis.com/css2?family=Inter:wght@400;500;600;700&display=swap" rel="stylesheet">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css" />
    <ThemeDebug theme={theme} />
  </head>
  <body>
    <main>
      <slot />
    </main>
    <footer>
      <p>Powered by <a href="https://github.com/adnandossaji/astrolink" class="footer-brand">AstroLinks</a></p>
    </footer>
  </body>
</html>