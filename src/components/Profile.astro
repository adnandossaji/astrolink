---
interface Props {
  name: string;
  image: string;
}

const { name, image } = Astro.props;
---

<div class="profile">
  <div class="avatar-container">
    <img src={image} alt={`${name}'s profile picture`} class="avatar" />
  </div>
  <h1>{name}</h1>
</div>

<style>
  .profile {
    display: flex;
    flex-direction: column;
    align-items: center;
    margin-bottom: 2rem;
  }

  .avatar-container {
    width: 96px;
    height: 96px;
    margin-bottom: 1rem;
    position: relative;
  }

  .avatar {
    width: 100%;
    height: 100%;
    border-radius: 50%;
    object-fit: cover;
    box-shadow: 0 4px 12px var(--shadowColor);
    border: 3px solid var(--cardBackground);
  }

  h1 {
    font-size: 1.5rem;
    font-weight: 700;
    text-align: center;
    margin-bottom: 0.5rem;
  }
</style> 